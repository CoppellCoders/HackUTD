<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:padding="30dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/background_popupjobs"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="right"
            android:paddingRight="15dp"
            android:paddingTop="10dp"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
android:id="@+id/close_btnjob"
                android:background="@drawable/x_close"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:text="Location"/>

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:id="@+id/location_name"
            android:gravity="center"

            android:textColor="@color/colorPrimary"
            android:text="TTTTTTT"/>

        <ImageButton
            android:id="@+id/map_aaaaa"
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:clickable="true"
            android:visibility="visible"
            android:layout_marginTop="10dp"
            android:background="@drawable/map_icon" />
        <ImageButton
            android:id="@+id/map_aaaa"
            android:layout_width="wrap_content"
            android:layout_height="400dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            android:clickable="true"
            android:background="@drawable/map_icon" />

        <Button
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:text="Confirm"
            android:textAllCaps="false"
            android:id="@+id/confirm_delvery"
            android:textColor="@color/colorPrimary"
            android:background="@drawable/delivery_confirm"/>

    </LinearLayout>

</LinearLayout>