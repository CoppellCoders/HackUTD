<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_marginBottom="30dp"
    android:layout_width="wrap_content"
    android:background="#FF9454"
    android:layout_height="wrap_content"

    android:weightSum="1">


    <ImageView
        android:id="@+id/itemPic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:layout_marginStart="-5dp"
        android:src="@drawable/place_1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/itemName"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity=""
            android:layout_marginStart="13dp"
            android:layout_toEndOf="@+id/itemPic"
            android:fontFamily="sans-serif"
            android:text="Lemma Coffee Roasters"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/item_price"
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity=""
            android:layout_marginStart="13dp"
            android:layout_toEndOf="@+id/itemPic"
            android:layout_weight="0.18"
            android:visibility="gone"
            android:paddingRight="15dp"
            android:fontFamily="sans-serif"
            android:text="Pay: $4.50"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textSize="15dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_desc"
            android:gravity="left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"

            android:layout_marginStart="13dp"
            android:layout_toEndOf="@+id/itemPic"

            android:fontFamily="sans-serif"
            android:text="Coffee"

            android:textColor="#ffffff"
            android:textSize="15dp" />


        <TextView
            android:id="@+id/item_rating"
            android:gravity="left"
            android:background="@drawable/rating_back"


            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity=""
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/itemPic"
            android:fontFamily="sans-serif"
            android:text="5/5.0"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:textSize="15dp" />

    </LinearLayout>
    <TextView
        android:id="@+id/item_distance"
        android:gravity="left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textStyle="bold"
        android:layout_marginStart="13dp"
        android:layout_toEndOf="@+id/itemPic"

        android:fontFamily="sans-serif"
        android:text="5 miles away"
        android:layout_marginBottom="10dp"
        android:textColor="#ffffff"
        android:textSize="15dp" />

</LinearLayout>